#cloud-config
# Create two files with example content using the write_files module
write_files:
  - content: |
    "Does cloud-init work?"
    owner: root:root
    permissions: '0644'
    path : /srv/foo
  - content: |
    "IT SURE DOES!"
    owner: root:root
    permissions: '0644'
    path: /srv/bar